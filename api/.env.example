# ==========================================
# REIGN - ENVIRONMENT CONFIGURATION
# ==========================================
# Fill in your credentials below

# ==========================================
# COCKROACHDB SERVERLESS (Required)
# ==========================================
# Get your connection string from: https://cockroachlabs.cloud
# Cluster → Connect → Connection String

DATABASE_URL=postgresql://YOUR_USERNAME:YOUR_PASSWORD@YOUR_CLUSTER.cockroachlabs.cloud:26257/defaultdb?sslmode=verify-full

# Connection pool settings (optimized for serverless)
DATABASE_POOL_MAX=10
DATABASE_POOL_IDLE_TIMEOUT=30000
DATABASE_CONNECTION_TIMEOUT=10000

# ==========================================
# CLOUDFLARE R2 (For file/avatar storage)
# ==========================================
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=reign-data
R2_ENDPOINT=https://your_account_id.r2.cloudflarestorage.com

# ==========================================
# SECURITY (Required)
# ==========================================
# Generate JWT secret using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_jwt_secret_minimum_32_characters_long

# ==========================================
# SERVER CONFIGURATION
# ==========================================
PORT=3001
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# ==========================================
# FIREBASE CONFIGURATION (Push Notifications)
# ==========================================
# Get these from Firebase Console > Project Settings > Service Accounts

FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_KEY_HERE\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com

# ==========================================
# EMAIL SERVICE (Future: Password Reset)
# ==========================================
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your_email
# SMTP_PASS=your_password
# EMAIL_FROM=noreply@reign.app
